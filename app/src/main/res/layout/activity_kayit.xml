<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9D423"
    tools:context=".Kayit">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pacifico"
                android:text="Kayıt Ol"
                android:textAlignment="center"
                android:textColor="#8BC34A"
                android:textSize="30dp"
                android:textStyle="bold"

                ></TextView>

            <EditText
                android:id="@+id/kullaniciadi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/backgroundemailandpassword"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="6dp"
                android:hint="Kullanıcı Adı"
                android:padding="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poetsen"
                android:textColorHint="#87AF82"></EditText>

            <EditText
                android:id="@+id/emailhere"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/backgroundemailandpassword"
                android:drawableLeft="@drawable/baseline_attach_email_24"
                android:drawablePadding="6dp"
                android:hint="Email"
                android:padding="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poetsen"
                android:textColorHint="#87AF82"></EditText>

            <EditText
                android:id="@+id/passhere"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/backgroundemailandpassword"
                android:drawableLeft="@drawable/baseline_wifi_password_24"
                android:drawablePadding="6dp"
                android:hint="Password"
                android:padding="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poetsen"
                android:textColorHint="#87AF82"></EditText>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/buttonbackground"
                android:onClick="kayitol"
                android:text="Kayıt Ol"
                android:textSize="18dp"
                android:fontFamily="@font/poetsen"
                android:textColor="#5A5641"></Button>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>